<UserControl
    x:Class="IntronFileController.Views.FileEditingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:IntronFileController.Views.Controls"
    xmlns:converters="clr-namespace:IntronFileController.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntronFileController.Views"
    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:materialDesignColors="clr-namespace:MaterialDesignColors;assembly=MaterialDesignColors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="clr-namespace:OxyPlot.SkiaSharp.Wpf;assembly=OxyPlot.SkiaSharp.Wpf"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanInverterConverter x:Key="BooleanInverterConverter" />
        <converters:VisibilityInverterConverter x:Key="VisibilityInverterConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  Make three columns so we can add a resizable GridSplitter between left and right panes  -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="200" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <!--  Botões de cima  -->
        <Grid Grid.ColumnSpan="3" Margin="8,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="0"
                Height="30"
                Margin="0,0,8,0"
                Command="{Binding AddFilesCommand}"
                Content="Adicionar" />
            <Button
                Grid.Column="1"
                Width="Auto"
                Height="30"
                Command="{Binding RemoveSelectedCommand}"
                Content="Remover" />
        </Grid>

        <!--  Conteudo (left column)  -->
        <DockPanel
            Grid.Row="1"
            Grid.Column="0"
            Margin="10">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  Lista de arquivos importados  -->
                <StackPanel Grid.Column="0" Margin="-10,0,10,0">
                    <TextBlock
                        Margin="12,0,0,8"
                        FontWeight="SemiBold"
                        Text="Arquivos importados" />
                    <ListBox
                        Margin="0"
                        HorizontalContentAlignment="Stretch"
                        ItemsSource="{Binding ImportedFiles}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        SelectedItem="{Binding SelectedFile}"
                        Style="{DynamicResource MaterialDesignNavigationListBox}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="6" Background="Transparent">
                                    <StackPanel>
                                        <TextBlock
                                            Width="150"
                                            FontWeight="SemiBold"
                                            Text="{Binding Model.FileName}"
                                            TextWrapping="Wrap" />
                                        <!--<TextBlock Text="{Binding Model.FilePath}" TextWrapping="Wrap" FontSize="11" Foreground="Gray" TextTrimming="CharacterEllipsis" ToolTip="{Binding Model.FilePath}" />-->
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>

                <!--  Preview / detalhes do arquivo  -->
                <Border
                    Grid.Column="1"
                    Padding="8"
                    BorderBrush="LightGray"
                    BorderThickness="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <!--  make a single flexible column so children can wrap within border  -->
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid Visibility="{Binding LabelsVisibility}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--  Nome e caminho  -->
                            <StackPanel HorizontalAlignment="Stretch">
                                <TextBlock
                                    MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                    HorizontalAlignment="Left"
                                    DockPanel.Dock="Top"
                                    FontSize="14"
                                    FontWeight="Bold"
                                    Text="{Binding SelectedFile.Model.FileName}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />
                                <TextBlock
                                    Margin="0,8,0,0"
                                    DockPanel.Dock="Top"
                                    FontWeight="SemiBold"
                                    Foreground="MediumPurple"
                                    Style="{DynamicResource MaterialDesignBodyLargeTextBlock}"
                                    Text="Caminho:" />
                                <TextBlock
                                    MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                    Foreground="Gray"
                                    Text="{Binding SelectedFile.Model.FilePath}"
                                    TextTrimming="CharacterEllipsis"
                                    TextWrapping="Wrap" />
                            </StackPanel>

                            <!--  Primeiras linhas preview  -->
                            <TextBlock
                                Grid.Row="1"
                                Margin="0,12,0,6"
                                FontWeight="SemiBold"
                                Foreground="MediumPurple"
                                Style="{DynamicResource MaterialDesignBodyLargeTextBlock}"
                                Text="Corte topo (preview):" />
                            <Grid Grid.Row="2">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock
                                        MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                        Foreground="Gray"
                                        TextWrapping="Wrap">

                                        <InlineUIContainer>
                                            <TextBlock
                                                Foreground="Red"
                                                Text=" ---- INÍCIO DO ARQUIVO ---- "
                                                Visibility="{Binding TextInitLabelVisibility}" />
                                        </InlineUIContainer>
                                        <LineBreak />

                                        <!-- FirstLines: removed in Keep mode (red), kept in Cut mode (green) -->
                                        <Run Text="{Binding SelectedFile.FirstLines, Mode=OneWay}">
                                            <Run.Style>
                                                <Style TargetType="Run">
                                                    <Setter Property="Foreground" Value="Red" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCutMode}" Value="True">
                                                            <Setter Property="Foreground" Value="Green" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Run.Style>
                                        </Run>

                                        <LineBreak />
                                        <Run Foreground="Red">------------------------------------------------</Run>
                                        <LineBreak />

                                        <!-- SelectedFirstLines: kept in Keep mode (green), removed in Cut mode (red) -->
                                        <Run Text="{Binding SelectedFile.SelectedFirstLines, Mode=OneWay}">
                                            <Run.Style>
                                                <Style TargetType="Run">
                                                    <Setter Property="Foreground" Value="Green" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCutMode}" Value="True">
                                                            <Setter Property="Foreground" Value="Red" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Run.Style>
                                        </Run>

                                    </TextBlock>
                                </ScrollViewer>
                            </Grid>

                            <Border
                                Grid.Row="3"
                                Width="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                BorderBrush="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=BorderBrush}"
                                BorderThickness="1" />

                            <!--  Ultimas linhas preview  -->
                            <TextBlock
                                Grid.Row="4"
                                Margin="0,12,0,6"
                                FontWeight="SemiBold"
                                Foreground="MediumPurple"
                                Style="{DynamicResource MaterialDesignBodyLargeTextBlock}"
                                Text="Corte embaixo (preview):" />
                            <Grid Grid.Row="5">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <TextBlock
                                        MaxWidth="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=ActualWidth}"
                                        Foreground="Gray"
                                        TextWrapping="Wrap">

                                        <!-- SelectedLastLines: kept in Keep mode (green), removed in Cut mode (red) -->
                                        <Run Text="{Binding SelectedFile.SelectedLastLines, Mode=OneWay}">
                                            <Run.Style>
                                                <Style TargetType="Run">
                                                    <Setter Property="Foreground" Value="Green" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCutMode}" Value="True">
                                                            <Setter Property="Foreground" Value="Red" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Run.Style>
                                        </Run>
                                        <LineBreak />
                                        <Run Foreground="Red">------------------------------------------------</Run>
                                        <LineBreak />
                                        <!-- LastLines: removed in Keep mode (red), kept in Cut mode (green) -->
                                        <Run Text="{Binding SelectedFile.LastLines, Mode=OneWay}">
                                            <Run.Style>
                                                <Style TargetType="Run">
                                                    <Setter Property="Foreground" Value="Red" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCutMode}" Value="True">
                                                            <Setter Property="Foreground" Value="Green" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Run.Style>
                                        </Run>
                                        <LineBreak />
                                        <InlineUIContainer>
                                            <TextBlock
                                                Foreground="Red"
                                                Text=" ---- FINAL DO ARQUIVO ---- "
                                                Visibility="{Binding TextEndLabelVisibility}" />
                                        </InlineUIContainer>

                                    </TextBlock>
                                </ScrollViewer>
                            </Grid>

                        </Grid>

                        <!--  Configurações da pagina  -->
                        <StackPanel Grid.Row="1">

                            <DockPanel>
                                <ToggleButton
                                    Margin="0,0,8,0"
                                    IsChecked="{Binding IsCutMode, Mode=TwoWay}"
                                    Content="Modo: Cortar" />
                                <Button
                                    Margin="8,0,8,0"
                                    Command="{Binding CutSelectionCommand}"
                                    Content="Executar Corte" />
                                <TextBlock
                                    VerticalAlignment="Bottom"
                                    Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                    Text="Remover Primeiras: " />
                                <TextBox
                                    MinWidth="35"
                                    MaxWidth="50"
                                    FontSize="14"
                                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding FirstLinesTextBox, Mode=TwoWay}"
                                    TextAlignment="Center" />

                                <TextBlock
                                    Margin="20,0,0,0"
                                    VerticalAlignment="Bottom"
                                    Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                    Text="Remover Ultimas: " />
                                <TextBox
                                    MinWidth="35"
                                    MaxWidth="50"
                                    FontSize="14"
                                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding LastLinesTextBox, Mode=TwoWay}"
                                    TextAlignment="Center" />

                                <Button
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding ApplyToAllCommand}"
                                    Content="Aplicar a todos"
                                    Style="{DynamicResource MaterialDesignFlatLightButton}" />
                            </DockPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock
                                    Margin="0,0,0,0"
                                    VerticalAlignment="Bottom"
                                    Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                    Text="Mostrar número de linhas (Sup): " />
                                <TextBox
                                    MinWidth="35"
                                    MaxWidth="50"
                                    HorizontalAlignment="Left"
                                    FontSize="14"
                                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding TopContextTextBox, Mode=TwoWay}"
                                    TextAlignment="Center" />

                                <materialDesign:PackIcon
                                    Width="13"
                                    Height="13"
                                    VerticalAlignment="Center"
                                    Kind="HelpCircle"
                                    ToolTip="Número máximo de linhas que aparecerão antes e depois da linha vermelha, para o corte superior." />
                                <TextBlock
                                    Margin="20,0,0,0"
                                    VerticalAlignment="Bottom"
                                    Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"
                                    Text="Mostrar número de linhas (Inf): " />
                                <TextBox
                                    MinWidth="35"
                                    MaxWidth="50"
                                    HorizontalAlignment="Left"
                                    FontSize="14"
                                    Style="{DynamicResource MaterialDesignFloatingHintTextBox}"
                                    Text="{Binding BottomContextTextBox, Mode=TwoWay}"
                                    TextAlignment="Center" />
                                <materialDesign:PackIcon
                                    Width="13"
                                    Height="13"
                                    VerticalAlignment="Center"
                                    Kind="HelpCircle"
                                    ToolTip="Número máximo de linhas que aparecerão antes e depois da linha vermelha, para o corte inferior." />
                            </StackPanel>
                        </StackPanel>


                        <TextBlock
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Style="{DynamicResource MaterialDesignDisplayLargeTextBlock}"
                            Text="Nada a exibir"
                            Visibility="{Binding LabelsVisibility, Converter={StaticResource VisibilityInverterConverter}}" />
                    </Grid>


                </Border>
            </Grid>
        </DockPanel>

        <!--  GridSplitter between left and right panes  -->
        <GridSplitter
            Grid.Row="1"
            Grid.Column="1"
            Width="5"
            HorizontalAlignment="Center"
            VerticalAlignment="Stretch"
            Background="Transparent"
            ShowsPreview="True" />

        <!--  Botões de baixo  -->
        <DockPanel
            Grid.Row="2"
            Grid.ColumnSpan="3"
            LastChildFill="False">
            <Button
                Margin="10,0,10,0"
                Command="{Binding ProcessAllCommand}"
                Content="Processar Tudo"
                DockPanel.Dock="Right" />
            <Button
                Command="{Binding NavigateBackCommand}"
                Content="Cancelar e voltar"
                DockPanel.Dock="Right" />

        </DockPanel>

        <!--  Right side: Plot and controls (occupies middle row only so bottom buttons stay visible)  -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <oxy:PlotView
                xmlns:behaviors="clr-namespace:IntronFileController.OxyBehaviors"
                x:Name="PlotViewControl"
                Margin="0,10,0,0"
                behaviors:RangeSelectionBehavior.IsEnabled="True"
                behaviors:RangeSelectionBehavior.RaiseCommandOnProgrammaticChange="True"
                behaviors:RangeSelectionBehavior.RangeSelectedCommand="{Binding RangeSelectedCommand, FallbackValue={x:Null}}"
                behaviors:RangeSelectionBehavior.SelectedMaxX="{Binding PlotSelectionMax, Mode=TwoWay}"
                behaviors:RangeSelectionBehavior.SelectedMinX="{Binding PlotSelectionMin, Mode=TwoWay}"
                d:Model="{x:Null}"
                Controller="{Binding PlotController}"
                Model="{x:Null}" />

            <StackPanel Grid.Column="1">

                <StackPanel Margin="8" Orientation="Vertical">
                    <TextBlock Margin="2" Text="Max pontos na tela" />
                    <controls:NumericUpDown
                        Width="120"
                        Maximum="10000000"
                        Minimum="10"
                        Value="{Binding MaxPointsOnScreen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="8" Orientation="Vertical">
                    <TextBlock Margin="2" Text="Min pontos na tela" />
                    <controls:NumericUpDown
                        Width="120"
                        Maximum="10000000"
                        Minimum="1"
                        Value="{Binding MinPointsOnScreen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <Button
                    Margin="10"
                    Command="{Binding ShowHideMarkersCommand}"
                    Content="{Binding IsShowingMarkersText}"
                    ToolTip="Alterna a exibição dos pontos (markers) no gráfico" />

                <!--  Plot selection numeric controls  -->
                <StackPanel Margin="8" Orientation="Vertical">
                    <TextBlock Margin="2" Text="Plot seleção min (índice)" />
                    <controls:NumericUpDown
                        Width="120"
                        Maximum="10000000"
                        Minimum="0"
                        Value="{Binding PlotSelectionMin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <StackPanel Margin="8" Orientation="Vertical">
                    <TextBlock Margin="2" Text="Plot seleção max (índice)" />
                    <controls:NumericUpDown
                        Width="120"
                        Maximum="10000000"
                        Minimum="0"
                        Value="{Binding PlotSelectionMax, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
