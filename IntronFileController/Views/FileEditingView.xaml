<UserControl
    x:Class="IntronFileController.Views.FileEditingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntronFileController.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <DockPanel Grid.Row="0" Margin="10">
            <StackPanel
                Margin="0,0,0,8"
                HorizontalAlignment="Left"
                DockPanel.Dock="Top"
                Orientation="Horizontal">
                <Button
                    Height="30"
                    Margin="0,0,8,0"
                    Command="{Binding AddFilesCommand}"
                    Content="Adicionar" />
                <Button
                    Width="Auto"
                    Height="30"
                    Command="{Binding RemoveSelectedCommand}"
                    Content="Remover" />
            </StackPanel>

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!--  Lista de arquivos importados  -->
                <ListBox
                    Grid.Column="0"
                    Margin="0,0,10,0"
                    DisplayMemberPath="FileName"
                    ItemsSource="{Binding ImportedFiles}"
                    SelectedItem="{Binding SelectedFile}" />

                <!--  Preview / detalhes do arquivo  -->
                <Border Grid.Column="1"
                        Padding="8"
                        BorderBrush="LightGray"
                        BorderThickness="1">
                    <StackPanel>
                            <TextBlock
                                FontSize="14"
                                FontWeight="Bold"
                                Text="{Binding SelectedFile.FileName}" />
                            <TextBlock
                                Margin="0,8,0,0"
                                FontWeight="SemiBold"
                                Text="Caminho:" />
                            <TextBlock Text="{Binding SelectedFile.FilePath}" TextWrapping="Wrap" />

                            <TextBlock
                                Margin="0,12,0,6"
                                FontWeight="SemiBold"
                                Text="Conteúdo (preview):" />
                            <TextBox
                                Height="300"
                                AcceptsReturn="True"
                                IsReadOnly="True"
                                Text="{Binding SelectedFile.Preview}"
                                TextWrapping="Wrap"
                                VerticalScrollBarVisibility="Auto" />
                        </StackPanel>
               
                </Border>
            </Grid>
        </DockPanel>
        <DockPanel Grid.Row="1" LastChildFill="False">
            <Button
                Margin="10,0,10,0"
                Content="Processar Tudo"
                DockPanel.Dock="Right" />
            <Button Content="Cancelar e voltar" DockPanel.Dock="Right" Command="{Binding NavigateBackCommand}"/>

        </DockPanel>
    </Grid>
</UserControl>
