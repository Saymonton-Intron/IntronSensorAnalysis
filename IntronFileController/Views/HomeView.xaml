<UserControl
    x:Class="IntronFileController.Views.HomeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:IntronFileController.Views"
    xmlns:materialDesign="clr-namespace:MaterialDesignThemes.Wpf;assembly=MaterialDesignThemes.Wpf"
    xmlns:materialDesignColors="clr-namespace:MaterialDesignColors;assembly=MaterialDesignColors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card
            Width="600"
            Height="350"
            PreviewDragOver="AddButton_PreviewDragOver"
            Drop="AddButton_Drop"
            AllowDrop="True"
            VerticalAlignment="Center"
            MouseDown="Card_MouseDown"
            Style="{DynamicResource MaterialDesignOutlinedCard}">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                <materialDesign:PackIcon Width="50"
                                         Height="50"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Kind="PlusBox" />
                <TextBlock Text="Solte seus arquivos .txt aqui" Style="{DynamicResource MaterialDesignBodyMediumTextBlock}"/>
            </StackPanel>

        </materialDesign:Card>
    </Grid>
</UserControl>
